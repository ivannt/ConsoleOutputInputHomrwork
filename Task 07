/*Task 7. Write a program that gets a number n and after that gets more n numbers and calculates and prints their sum.*/


using System;
class PrintSum
{
    static void Main()
    {
        Console.Title = "PrintSum";

        Console.WriteLine("Enter how many numbers U want to sum: ");
        int nNum = int.Parse(Console.ReadLine());
        int sum = 0;

        for (int i = 1; i <= nNum; i++)/* Counter must be graeter than 0!!!*/
        {
            Console.WriteLine("Enter a number value: ");
            int value = int.Parse(Console.ReadLine());
            sum += value;
        }
        Console.WriteLine(new string('-',33));
        Console.WriteLine("The sum of theese {0} numbers is {1}", nNum, sum);
    }
}

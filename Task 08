/*Task 8. Write a program that reads an integer number n from the console and prints all 
 * the numbers in the interval [1..n], each on a single line.*/


using System;
class LineOfNumbers
{
    static void Main()
    {
        Console.Title = "LineOfNumbers";

        Console.WriteLine("Enter a number n: ");
        int nNum = int.Parse(Console.ReadLine());

        Console.WriteLine("\n" + new string('-', 77));
        for (int i = 1; i <= nNum; i++)
        {
            Console.Write("{0}, ", i);
        }
        Console.WriteLine("\n" + new string('-',77));
    }
}

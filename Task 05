/*Task 5. Write a program that gets two numbers from the console and prints the greater of them. Donâ€™t use if statements.*/


using System;
class GraetarNumber
{
    static void Main()
    {
        Console.Title = "GraetarNumber";

        int firstNum = 0;
        int secondNum = 0;
        Console.WriteLine("Enter the Two integer numbers: ");

        for (int i = 0; i <=0 ; i++)
        {
            firstNum = int.Parse(Console.ReadLine());
            secondNum = int.Parse(Console.ReadLine());
        }
        bool firstIsGraeter = firstNum > secondNum;
        Console.WriteLine(new string('-', 33));
        Console.WriteLine(firstIsGraeter ?"{0} is greater than {1}" :"{1} is greater than {0}", firstNum, secondNum);
    }
}
